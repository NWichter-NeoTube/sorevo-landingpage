<section id="insurance-selector" class="py-16 md:py-20 bg-white">
  <div class="max-w-4xl mx-auto px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">Wählen Sie Ihre Pflegekasse</h2>
    <p class="text-center text-gray-600 mb-12">Finden Sie schnell den richtigen Antrag für Ihre Pflegekasse</p>
    
    <div class="max-w-2xl mx-auto">
      <div class="mb-8">
        <label for="insurance-select" class="block text-sm font-medium text-gray-700 mb-2">
          Pflegekasse
        </label>
        <select 
          id="insurance-select" 
          class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 text-lg bg-white shadow-sm appearance-none"
          onchange="showInsuranceLinks(this.value)"
        >
          <option value="">Bitte wählen Sie Ihre Pflegekasse</option>
          <option value="tk">Techniker Krankenkasse (TK)</option>
          <option value="barmer">BARMER</option>
          <option value="aok-bw">AOK Baden-Württemberg</option>
          <option value="aok-bayern">AOK Bayern</option>
          <option value="dak">DAK Gesundheit</option>
          <option value="other">Andere</option>
        </select>
      </div>

      <!-- Results Container - Always visible to prevent layout shift -->
      <div class="mt-8 min-h-[200px]">
        <!-- Placeholder Text -->
        <div id="placeholder-text" class="text-center text-gray-400 py-8">
          <svg class="w-12 h-12 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <p class="text-lg">Wählen Sie Ihre Krankenkasse aus, um die passenden Anträge zu finden</p>
        </div>

        <!-- Links Container -->
        <div id="insurance-links" class="hidden">
          <div class="bg-green-50 border border-green-200 rounded-xl p-6">
            <h3 id="insurance-name" class="text-xl font-semibold text-green-800 mb-4"></h3>
            <div class="grid md:grid-cols-2 gap-4">
              <a 
                id="pdf-link" 
                href="#" 
                target="_blank" 
                class="flex items-center justify-center gap-3 bg-white border border-green-300 rounded-xl px-6 py-4 text-green-700 hover:bg-green-100 transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                PDF-Antrag herunterladen
              </a>
              <a 
                id="online-link" 
                href="#" 
                target="_blank" 
                class="flex items-center justify-center gap-3 bg-white border border-green-300 rounded-xl px-6 py-4 text-green-700 hover:bg-green-100 transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                Online-Formular öffnen
              </a>
            </div>
          </div>
        </div>

        <!-- Other Insurance Message -->
        <div id="other-message" class="hidden">
          <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-6">
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-yellow-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
              <div>
                <h3 class="text-lg font-semibold text-yellow-800 mb-2">Krankenkasse noch nicht unterstützt</h3>
                <p class="text-yellow-700">
                  Wir unterstützen Ihre Krankenkasse aktuell leider noch nicht, aber sie wird bald ergänzt. 
                  Melden Sie sich gerne bei uns, wenn Sie Unterstützung benötigen.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  const insuranceData = {
    'tk': {
      name: 'Techniker Krankenkasse (TK)',
      pdf: 'https://mare-pflege.de/informationen/downloads/tk_antrag_auf_pflegeleistungen.pdf',
      online: 'https://www.tk.de/service/form/2077146/pflegeantrag.form'
    },
    'barmer': {
      name: 'BARMER',
      pdf: 'https://www.barmer.de/resource/blob/1022534/4714af16f1658e0f65e7db591f47d227/antrag-auf-pflegeleistung-44100-data.pdf',
      online: 'https://www.barmer.de/unsere-leistungen/pflege/antraege-auf-pflegeleistungen-1003510'
    },
    'aok-bw': {
      name: 'AOK Baden-Württemberg',
      pdf: 'https://www.aok.de/fk/fileadmin/user_upload/Antrag_auf_Leistungen_der_Pflegeversicherung_BW.pdf',
      online: 'https://www.aok.de/pk/bw/inhalt/antrag-auf-leistungen-der-pflegeversicherung/'
    },
    'aok-bayern': {
      name: 'AOK Bayern',
      pdf: 'https://www.aok.de/fk/fileadmin/user_upload/Antrag_auf_Leistungen_der_Pflegeversicherung_BY.pdf',
      online: 'https://www.aok.de/pk/bayern/inhalt/antrag-auf-leistungen-der-pflegeversicherung/'
    },
    'dak': {
      name: 'DAK Gesundheit',
      pdf: 'https://caas.content.dak.de/caas/v1/media/21572/data/ce4e98dd4f95777a0d5a73aca1db9c7f/antrag-auf-ambulante-teilstationaere-leistungen.pdf',
      online: 'https://www.dak.de/dak/leistungen/alle-pflegeantraege-auf-einen-blick_21568'
    }
  };

  function showInsuranceLinks(value) {
    const linksContainer = document.getElementById('insurance-links');
    const otherMessage = document.getElementById('other-message');
    const placeholderText = document.getElementById('placeholder-text');
    const insuranceName = document.getElementById('insurance-name');
    const pdfLink = document.getElementById('pdf-link');
    const onlineLink = document.getElementById('online-link');

    // Hide all containers initially
    linksContainer.classList.add('hidden');
    otherMessage.classList.add('hidden');
    placeholderText.classList.add('hidden');

    if (value === 'other') {
      otherMessage.classList.remove('hidden');
    } else if (value && insuranceData[value]) {
      const data = insuranceData[value];
      insuranceName.textContent = data.name;
      pdfLink.href = data.pdf;
      onlineLink.href = data.online;
      linksContainer.classList.remove('hidden');
    } else if (!value) {
      // Show placeholder when no selection
      placeholderText.classList.remove('hidden');
    }
  }

  // Make function globally available
  window.showInsuranceLinks = showInsuranceLinks;
</script>

<style>
  /* Complete reset and force uniform border */
  #insurance-select {
    -webkit-appearance: none !important;
    -moz-appearance: none !important;
    appearance: none !important;
    
    /* Reset all borders and set uniform thin gray border */
    border: none !important;
    outline: 1px solid #D1D5DB !important;
    
    /* Custom dropdown arrow */
    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%236B7280' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6,9 12,15 18,9'%3e%3c/polyline%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 12px center;
    background-size: 16px;
    padding-right: 40px;
    
    /* Force background and text styles */
    background-color: white !important;
    color: #374151 !important;
  }
  
  /* Force consistent border on focus - use outline instead of border */
  #insurance-select:focus {
    outline: 1px solid #10B981 !important;
    box-shadow: 0 0 0 2px rgba(16, 185, 129, 0.2) !important;
  }
  
  /* Force uniform styling on dropdown options */
  #insurance-select option {
    padding: 8px 12px !important;
    border: none !important;
    outline: none !important;
    background: white !important;
    color: #374151 !important;
  }
  
  /* Remove browser-specific dropdown styling */
  #insurance-select::-ms-expand {
    display: none;
  }
  
  #insurance-select::-webkit-scrollbar {
    width: 8px;
  }
  
  #insurance-select::-webkit-scrollbar-track {
    background: #f1f1f1;
  }
  
  #insurance-select::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 4px;
  }
</style>
