---
import data from "../data/roadmap.json";
const groups = [data.now, data.next, data.later];
---
<section class="py-16 md:py-20">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-center">Roadmap</h2>
    <div class="mt-12 grid md:grid-cols-3 gap-6">
      {groups.map((g) => (
        <div class="p-6 bg-gray-50 rounded-2xl border">
          <h3 class="text-xl font-semibold">{g.status} {g.title}</h3>
          <ul class="mt-4 space-y-2">
            {g.items.map((i) => <li class="flex gap-2"><span>â€¢</span><span>{i}</span></li>)}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
